<div class="container">
  <div class="row">
    <div class="col-lg-12 d-flex justify-content-center">
      <h2>Total Contribution Account Statement</h2>
    </div>
  </div>
</div>
<form id="deletetransaction" action="" method="post">
  <div class="container">
    <table
      id="totalContributionTable"
      class="display blueTable"
      style="width: 100%"
    >
      <thead>
        <tr>
          <th>S/N</th>
          <th>Date</th>
          <th>Narration</th>
          <th>Debit</th>
          <th>Credit</th>
          <th>Share Capital</th>
          <th>Thrift Savings</th>
          <th>Special Deposit</th>
          <th>Total Contribution Account Balance</th>
          <th>Update</th>
        </tr>
      </thead>

      <tbody>
        <%totalContributionkeys %> <%let x = 1 %> <% for (const key in
        totalcontributionstatement) { %>
        <%if(totalcontributionstatement[key].transactiontype == "credit"){%>
        <tr>
          <td><%=x%></td>
          <td><%=totalcontributionstatement[key].date%></td>
          <td><%=totalcontributionstatement[key].narration%></td>
          <td>0</td>
          <td><%=totalcontributionstatement[key].amount%></td>
          <td><%=totalcontributionstatement[key].sharecapital%></td>
          <td><%=totalcontributionstatement[key].thriftsavings%></td>
          <td><%=totalcontributionstatement[key].specialdeposit%></td>
          <td><%=totalcontributionstatement[key].balance%></td>
        <td>
            <button
              class="deletetransactionbutton"
              name="updatebutton"
              value="<%-totalContributionkeys[key]%> <%-username %>"
            >
            
            Update
            </button>
          </td>
        
        </tr>

        <%}else{%>

        <tr>
          <td><%=x%></td>
          <td><%=totalcontributionstatement[key].date%></td>
          <td><%=totalcontributionstatement[key].narration%></td>
          <td><%=totalcontributionstatement[key].amount%></td>
          <td>0</td>
          <td><%=totalcontributionstatement[key].sharecapital%></td>
          <td><%=totalcontributionstatement[key].thriftsavings%></td>
          <td><%=totalcontributionstatement[key].specialdeposit%></td>
          <td><%=totalcontributionstatement[key].balance%></td>
         <td>
            <button
              class="deletetransactionbutton"
              name="updatebutton"
              value="<%-totalContributionkeys[key]%> <%-username %>"
            >
              Update
            </button>
          </td>
    
        </tr>

        <%}%> <%x++%> <%}%>
      </tbody>
    </table>
  </div>
</form>
