  <body style="width: 100%">
    <ul class="nav nav-pills mb-3" id="pills-tab" role="tablist">
      <li class="nav-item" role="presentation">
        <button
          class="nav-link active"
          id="pills-home-tab"
          data-bs-toggle="pill"
          data-bs-target="#pills-home"
          type="button"
          role="tab"
          aria-controls="pills-home"
          aria-selected="true"
        >
          Create News
        </button>
      </li>
      <li class="nav-item" role="presentation">
        <button
          class="nav-link"
          id="pills-profile-tab"
          data-bs-toggle="pill"
          data-bs-target="#pills-profile"
          type="button"
          role="tab"
          aria-controls="pills-profile"
          aria-selected="false"
        >
          All posted news
        </button>
      </li>
    </ul>
    <div class="tab-content" id="pills-tabContent">
      <div
        class="tab-pane fade show active"
        id="pills-home"
        role="tabpanel"
        aria-labelledby="pills-home-tab"
      >
        <%- include("newssection/createnews.ejs")-%>
      </div>
      <div
        class="tab-pane fade"
        id="pills-profile"
        role="tabpanel"
        aria-labelledby="pills-profile-tab"
      >
        <%- include("newssection/allnews.ejs")-%>
      </div>
    </div>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.2/jquery.min.js"></script>
    <script src="//cdn.jsdelivr.net/npm/sweetalert2@10"></script>
    <script src="bootstrap-5.0.0-beta2-dist/js/bootstrap.bundle.js"></script>

    <script>
      function showAlert(message) {
        Swal.fire({
          position: "center",
          icon: "success",
          title: message,
          showConfirmButton: false,
          timer: 2000,
        });
        setTimeout(function () {
          window.location.reload(1);
        }, 2000);
      }

      var listLength = document.querySelectorAll(".deletenews").length;

      for (var i = 0; i < listLength; i++) {
        //console.log(i);

        document
          .querySelectorAll(".deletenews")
          [i].addEventListener("click", function () {
            $.ajax({
              url: "http://localhost:3000/newssection",
              type: "POST",
              data: {
                newsbutton: "Delete news",
                selectednews: this.value,
              },
              success: function (data) {
                console.log(data);
                showAlert("Selected annoucement has been deleted");
              },
            });
          });
      }

      $("#newsform").submit(function (e) {
        e.preventDefault();
        $.ajax({
          url: "http://localhost:3000/newssection",
          type: "POST",
          data: {
            title: $("#title").val(),
            content: $("#content").val(),
            date: $("#date").val(),
            newsbutton: $("#postnews").val(),
          },
          success: function (data) {
            showAlert("News has been posted to members account");
          },
          error: function (data) {
            console.log(data);
          },
        });
      });
    </script>
  </body>
</html>
