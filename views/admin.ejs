  <body style="width: 100%">
    <div style="height: 50px"></div>

    <table id="myTable" class="display" style="width: 100%">
      <thead>
        <tr>
          <th>Username</th>
          <th>Firstname</th>
          <th>Lastname</th>
          <th>Middlename</th>
          <th>Total Contribution</th>
          <th>Edit member</th>
          <th>Reset Password</th>
        </tr>
      </thead>

      <tbody>
        <% for (let i = 0; i < memberList.length; i++) {%>

        <tr>
          <td><%=memberList[i].username %></td>
          <td><%=memberList[i].firstname %></td>
          <td><%=memberList[i].lastname %></td>
          <td><%=memberList[i].middlename %></td>
          <td>â‚¦<%=contributionList[i] %></td>
          <td>
            <form
              action=""
              method="POST"
              id="adminform"
              style="padding-top: 13px"
            >
              <button
                type="submit"
                value="Edit <%=memberList[i].username %>"
                name="adminbutton"
                class="btn btn-secondary"
              >
                Edit <%=memberList[i].username %>
              </button>
            </form>
          </td>
          <td>
            <button
              type="submit"
              value="<%=memberList[i].username %>"
              name="adminbutton"
              class="btn btn-danger resetpassword"
            >
              Reset
            </button>
          </td>
        </tr>

        <%}%>
      </tbody>
    </table>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.2/jquery.min.js"></script>
    <script src="//cdn.jsdelivr.net/npm/sweetalert2@10"></script>
    <script src="datatables/jquery.js"></script>
    <script src="datatables/DataTables-1.10.23/js/jquery.dataTables.min.js"></script>
    <script src="datatables/Buttons-1.6.5/js/dataTables.buttons.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jszip/3.1.3/jszip.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.53/pdfmake.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.53/vfs_fonts.js"></script>
    <script src="datatables/Buttons-1.6.5/js/buttons.html5.min.js"></script>
    <script src="datatables/Buttons-1.6.5/js/buttons.print.min.js"></script>
    <script src="bootstrap-5.0.0-beta2-dist/js/bootstrap.bundle.js"></script>

    <script>
      $(document).ready(function () {
        $("#myTable").DataTable({
          // dom: "Bfrtip",
          // buttons: ["copy", "csv", "excel", "pdf", "print"],
          dom: "lfrtiBp",
          buttons: [
            {
              extend: "copy",
              title: "Chadvent members list",
            },
            {
              extend: "csv",
              title: "Chadvent members list",
            },
            {
              extend: "excel",
              title: "Chadvent members list",
            },
            {
              extend: "pdf",
              title: "Chadvent members list",
            },
            {
              extend: "print",
              title: "Chadvent members list",
            },
          ],
        });
      });

      var listLength = document.querySelectorAll(".resetpassword").length;

      for (var i = 0; i < listLength; i++) {
        //console.log(i);

        document
          .querySelectorAll(".resetpassword")
          [i].addEventListener("click", function () {

            Swal.fire({
          title: "Are you sure you want to reset this users password?",
          showCancelButton: true,
          confirmButtonText: `Reset`,
        }).then((result) => {
          if (result.isConfirmed) {
            $.ajax({
              url: "https://chadventmpcs.herokuapp.com/profile",
              method: "POST",
              data: {
                adminusernametoreset:this.value,
              },
              success: function (data) {
                Swal.fire({
                  position: "center",
                  icon: "success",
                  title: "Password has been reset",
                  showConfirmButton: false,
                  timer: 3000,
                });
                // setTimeout(function () {
                //   location.replace("logout");
                // }, 3000);
              },
            });
          }
        });
          
          });
      }

     
    </script>
  </body>
</html>
