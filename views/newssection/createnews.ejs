<form action="" method="post" id="newsform">
    <div style="height: 50px"></div>

    <div
      class="container bg-info"
      style="padding-bottom: 40px; padding-top: 40px"
    >
      <div class="row">
        <div class="col-lg-12">
          <h1 style="text-align: center">
            Create a News Broadcast to all Chadvent MPCS members
          </h1>
        </div>
      </div>

      <div class="row" style="padding: 40px 0px 20px 0px">
        <div class="col-lg-6">
          <label for="newstitle"><strong>Title</strong></label>
          <input
            class="form-control"
            type="text"
            name="title"
            id="title"
            placeholder="News Title"
            required
          />
        </div>
        <div class="col-lg-6">
          <label for="newstitle"><strong>Date</strong></label>
          <input
            class="form-control"
            type="date"
            name="date"
            id="date"
            placeholder=""
            required
          />
        </div>
      </div>

      <div class="row" style="padding: 20px 0px 40px 0px">
        <div class="col-lg-12">
          <label for="newstitle"><strong>Content</strong></label>
          <input
            class="form-control"
            type="text"
            name="content"
            id="content"
            placeholder="News content"
            required
          />
        </div>
      </div>

      <div class="row">
        <div class="col-lg-3"></div>
        <div class="col-lg-6 d-flex justify-content-center">
          <input
            id="postnews"
            type="submit"
            value="Post on members profile"
            class="btn btn-lg btn-secondary"
            name="newsbutton"
          />
        </div>

        <div class="col-lg-3"></div>
      </div>
    </div>
  </form>